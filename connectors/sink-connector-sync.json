{
    "name": "sink-connector-sync",
    "config": {
        "connector.class": "io.debezium.connector.jdbc.JdbcSinkConnector",
        "tasks.max": "1",
        "connection.url": "jdbc:sqlserver://sqlserver:1433;databaseName=SyncTargetDB;encrypt=false",
        "connection.username": "sa",
        "connection.password": "YourStrong@Password123",
        "topics.regex": "insurance\\.(PolicyServiceDB|ClaimsServiceDB|CustomerServiceDB)\\.dbo\\..+",
        "insert.mode": "upsert",
        "delete.enabled": "true",
        "primary.key.mode": "record_key",
        "schema.evolution": "basic",
        "table.name.format": "${topic}",
        "auto.create": "true",
        "auto.evolve": "true",
        "batch.size": "1000",
        "max.retries": "3",
        "retry.backoff.ms": "3000"
    }
}